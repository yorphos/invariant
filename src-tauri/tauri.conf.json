{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "invariant",
  "version": "0.3.0",
  "identifier": "com.yorphos.invariant",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev:vite",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Invariant Accounting",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "backgroundColor": "#f5f5f5"
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset: https://asset.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ5MDFFM0Q2ODJGMjQ1RkQKUldUOVJmS0MxdU1CU1J1Rm5oSjRqWmpkcEtkN2lqSlRrSVZudHJJWnVtUDFQQVdzL2FhL1dndjcK",
      "endpoints": [
        "https://github.com/yorphos/invariant/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
